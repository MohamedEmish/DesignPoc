<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="fontFamily">@font/font_vazirmatn</item>
    </style>
    
    <!-- Typography   -->
    <style name="ShahryTextStyleAlerter">
        <item name="android:fontFamily">@font/font_vazirmatn_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

                    <!-- Heading   -->
    <style name="ShahryHeadingXLarge">
        <item name="fontFamily">@font/font_vazirmatn_semi_bold</item>
        <item name="android:textSize">@dimen/font_heading_x_large</item>
        <item name="lineSpacing">@dimen/spacing_small_8</item>
    </style>

    <style name="ShahryHeadingLarge">
