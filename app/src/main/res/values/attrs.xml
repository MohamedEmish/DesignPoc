<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShahryButton">
        <attr name="buttonType" format="enum">
            <enum name="primaryLargeButton" value="0"/>
            <enum name="primaryMediumButton" value="1"/>
            <enum name="primarySmallButton" value="2"/>
            <enum name="primaryXSmallButton" value="3"/>
            <enum name="secondaryLargeButton" value="4"/>
            <enum name="secondaryMediumButton" value="5"/>
            <enum name="secondarySmallButton" value="6"/>
            <enum name="ghostLargeButton" value="7"/>
            <enum name="ghostMediumButton" value="8"/>
            <enum name="ghostSmallButton" value="9"/>
            <enum name="textLargeButton" value="10"/>
            <enum name="textMediumButton" value="11"/>
            <enum name="textSmallButton" value="12"/>
        </attr>
        <attr name="text" format="reference"/>
        <attr name="textColor" format="color"/>
        <attr name="textDisabledColor" format="color"/>

        <attr name="buttonColor" format="color"/>
        <attr name="buttonDisabledColor" format="color"/>

        <attr name="buttonStrokeColor" format="color"/>
        <attr name="buttonStrokeDisabledColor" format="color"/>

        <attr name="progressColor" format="color"/>
        <attr name="rippleColor" format="color"/>

        <attr name="iconResource" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PinView">
        <attr name="pinBackground" format="reference" />
        <attr name="pinTextColor" format="reference"/>
        <attr name="pinLength" format="integer" />
        <attr name="pinWidth" format="dimension" />
        <attr name="pinHeight" format="dimension" />
        <attr name="splitWidth" format="dimension" />
        <attr name="cursorVisible" format="boolean" />
        <attr name="password" format="boolean" />
        <attr name="forceKeyboard" format="boolean" />
        <attr name="hint" format="string" />
        <attr name="inputType" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>
    <attr name="inputType" format="enum">
        <enum name="text" value="0" />
        <enum name="number" value="1" />
    </attr>

    <declare-styleable name="ShahryPinView">
        <attr name="pinViewHint" format="reference"/>
        <attr name="pinViewLength" format="integer" />
    </declare-styleable>
</resources>