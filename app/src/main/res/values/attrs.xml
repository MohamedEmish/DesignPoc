<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShahryButton">
        <attr name="buttonType" format="enum">
            <enum name="primaryLargeButton" value="0"/>
            <enum name="primaryMediumButton" value="1"/>
            <enum name="primarySmallButton" value="2"/>
            <enum name="primaryXSmallButton" value="3"/>
            <enum name="secondaryLargeButton" value="4"/>
            <enum name="secondaryMediumButton" value="5"/>
            <enum name="secondarySmallButton" value="6"/>
            <enum name="ghostLargeButton" value="7"/>
            <enum name="ghostMediumButton" value="8"/>
            <enum name="ghostSmallButton" value="9"/>
            <enum name="textLargeButton" value="10"/>
            <enum name="textMediumButton" value="11"/>
            <enum name="textSmallButton" value="12"/>
        </attr>
        <attr name="text" format="reference"/>
        <attr name="textColor" format="color"/>
        <attr name="textDisabledColor" format="color"/>

        <attr name="buttonColor" format="color"/>
        <attr name="buttonDisabledColor" format="color"/>

        <attr name="buttonStrokeColor" format="color"/>
        <attr name="buttonStrokeDisabledColor" format="color"/>

        <attr name="progressColor" format="color"/>
        <attr name="rippleColor" format="color"/>

        <attr name="iconResource" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ShahryInputField">
        <attr name="disabledTextColor" format="color" />

        <attr name="boxBackgroundColor" format="color" />

        <attr name="iconDisabledColor" format="color" />
        <attr name="iconColor" format="color" />

        <attr name="iconEndResource" format="reference" />
        <attr name="isFieldEnabled" format="boolean" />
        <attr name="hintTextColor" format="color" />
        <attr name="enteredTextColor" format="color" />
        <attr name="errorEnabled" format="boolean" />
        <attr name="helperTextEnabled" format="boolean" />
        <attr name="editTextHint" format="reference" />
        <attr format="boolean" name="passwordToggleEnabled"/>
        <attr format="reference" name="passwordToggleDrawable"/>
        <attr name="fieldBackground" format="reference" />

        <attr name="editTextInputType">
            <flag name="text" value="0x00000001" />
            <flag name="textEmailAddress" value="0x00000021" />
            <flag name="textPassword" value="0x00000081" />
            <flag name="numberPassword" value="0x00000012" />
            <flag name="number" value="0x00000002" />
            <flag name="numberDecimal" value="0x00002002" />
            <flag name="phone" value="0x00000003" />
            <flag name="datetime" value="0x00000004" />
            <flag name="date" value="0x00000014" />
            <flag name="time" value="0x00000024" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ShahryPasswordInputField">
        <attr name="passwordDisabledTextColor" format="color" />

        <attr name="passwordIconDisabledColor" format="color" />
        <attr name="passwordIconColor" format="color" />

        <attr name="passwordIconEnabled" format="boolean" />
        <attr name="passwordHintTextColor" format="color" />
        <attr name="passwordTextColor" format="color" />
        <attr name="passwordHint" format="reference" />
        <attr name="passwordBackground" format="reference" />

    </declare-styleable>

    <declare-styleable name="ShahryPhoneNumberInputField">
        <attr name="phoneDisabledTextColor" format="color" />
        <attr name="phoneIconDisabledColor" format="color" />
        <attr name="phoneIconColor" format="color" />
        <attr name="phoneIconEnabled" format="boolean" />
        <attr name="phoneHintTextColor" format="color" />
        <attr name="phoneTextColor" format="color" />
        <attr name="phoneHint" format="reference" />
        <attr name="phoneFocusedHint" format="reference" />
    </declare-styleable>

    <declare-styleable name="PinView">
        <attr name="pinBackground" format="reference" />
        <attr name="pinTextColor" format="reference"/>
        <attr name="pinLength" format="integer" />
        <attr name="pinWidth" format="dimension" />
        <attr name="pinHeight" format="dimension" />
        <attr name="splitWidth" format="dimension" />
        <attr name="cursorVisible" format="boolean" />
        <attr name="password" format="boolean" />
        <attr name="forceKeyboard" format="boolean" />
        <attr name="hint" format="string" />
        <attr name="inputType" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>
    <attr name="inputType" format="enum">
        <enum name="text" value="0" />
        <enum name="number" value="1" />
    </attr>

    <declare-styleable name="ShahryPinView">
        <attr name="pinViewHint" format="reference"/>
    </declare-styleable>
</resources>